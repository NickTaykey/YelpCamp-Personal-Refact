<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheet/index.css" />
<link rel="stylesheet" type="text/css" href="/stylesheet/form.css" />
<% include ../partials/close_header %>

<div class="row form-row">
  <h1 class="title">Reset Password</h1>
  <form action="/reset-password/<%= token %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="newPassword">New password:</label>
      <input
        class="form-control"
        type="password"
        id="newPassword"
        name="newPassword"
        placeholder="new password"
        autofocus
      />
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirm password:</label>
      <input
        class="form-control"
        type="password"
        id="confirmPassword"
        name="confirmPassword"
        placeholder="confirm password"
      />
    </div>
    <h4 id="pwdStateLabel" style="margin-bottom: 15px;"></h4>
    <div class="form-group">
      <button class="btn btn-block btn-primary auth-btn" type="submit">
        Update
      </button>
    </div>
  </form>
</div>
<script src="/javascripts/reset.js"></script>
<% include ../partials/footer %>
