<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheet/form.css" />

<% include ../partials/close_header %>
<div class="container">
  <h1 class="text-center">New Campground</h1>
  <div class="row form-row">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
          value="<% if(name) { %><%= name %><% } %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          placeholder="location"
          value="<% if(location){ %><%= location %><% } %>"
        />
      </div>
      <div class="form-group">
        <label for="images">4 images at the most</label>
        <input
          class="form-control"
          type="file"
          name="images"
          accept="image/*"
          multiple
          id="images"
        />
      </div>
      <div class="form-group">
        <input class="newCampgroundCheckbox" type="checkbox" name="freeWiFi"
        id="wifi" value="true" <%= freeWiFi ? "checked" : "" %> />
        <label for="wifi">Free Wi-Fi</label>
        <input class="newCampgroundCheckbox" type="checkbox"
        name="hasSwimingPool" id="swimingPool" value="true" <%= hasSwimingPool ?
        "checked" : "" %> />
        <label for="swimingPool">Has Swiming pool</label>
      </div>
      <div class="form-group">
        <label for="baths">Type of baths:</label>
        <select name="baths" id="baths" class="form-control">
          <option value="no shower" <%= baths==="no shower" ? "selected" : "" %> >no shower</option>
          <option value="shower" <%= baths==="shower" ? "selected" : "" %> >shower</option>
          <option value="shower and bath tub" <%= baths==="shower and bath tub" ? "selected" : "" %> >shower and bath tub</option>
        </select>
      </div>
      <div class="form-group">
        <label for="carParkings">Type of car parkings</label>
        <select name="carParkings" id="carParkings" class="form-control">
          <option value="basic" <%= carParkings==="basic" ? "selected" : "" %>>basic</option>
          <option value="covered" <%= carParkings==="covered" ? "selected" : "" %>>covered</option>
          <option value="with parkers" <%= carParkings==="with parkers" ? "selected" : "" %>>with parkers</option>
        </select>
      </div>
      <br />
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          name="price"
          placeholder="price"
          min="0.01"
          step="100"
          value="<% if(price) { %><%= price %><% } %>"
        />
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          name="description"
          id=""
          cols="30"
          rows="1"
          placeholder="description ... "
        >
<% if(description) { %><%= description %><% } %></textarea
        >
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          CREATE
        </button>
      </div>
    </form>
  </div>
</div>
<script src="/javascripts/validateLocation.js"></script>
<script src="/javascripts/newCampground.js"></script>
<% include ../partials/footer %>
