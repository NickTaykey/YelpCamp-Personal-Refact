      </ul>
      <ul class="nav navbar-nav navbar-right">
        <!-- SE L'UTENTE NON E' LOGGATO VOGLIAMO MOSTRARE IL LINK LOGIN E SIGNUP -->
        <% if(!currentUser){ %>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Signup</a></li>
