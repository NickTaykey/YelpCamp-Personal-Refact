if(search){
    var answers = question.answers;
    const searcher = new fuzzySearch(answers, ['content', 'author'], {sort: true});        
    var results = searcher.search(search);
    if(results.length===0){
        req.flash("error", "error");
        return res.redirect("/questions/"+req.params.id);
    } 
    title = "Search for " + search;
    context.answers = results;

} else {
    context.question.answers = [];
}



